<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grad_bg"
    tools:context=".User1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ViewFlipper
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:id="@+id/v_flipper"
                tools:ignore="InvalidId">
            </ViewFlipper>


            <ImageView
                android:id="@+id/v"
                android:layout_width="300dp"
                android:layout_gravity="center"
                android:layout_height="150dp"
                android:layout_below="@+id/v_flipper"
                android:layout_marginTop="30dp"
                android:src="@drawable/am">

            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Amity University"
                android:textColor="@color/white"
                android:id="@+id/vt"
                android:layout_toRightOf="@+id/v"
                android:layout_below="@+id/v_flipper"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:textSize="18sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Noida ( UttarPradesh )"
                android:textColor="@color/white"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:textSize="18sp"
                />
            
            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp"
                android:scaleX="0.5"
                android:scaleY="0.5"
                android:rating="4.8"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apply"
                android:layout_marginLeft="130dp"
                android:id="@+id/btn1"
                android:background="@drawable/bt_bg"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                />

            <ImageView
                android:layout_width="300dp"
                android:layout_gravity="center"
                android:layout_height="150dp"
                android:id="@+id/c"
                android:layout_below="@+id/v"
                android:layout_marginTop="70dp"
                android:src="@drawable/ctk">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chitkara School of Engineering"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:id="@+id/ct"
                android:layout_toRightOf="@+id/c"
                android:layout_below="@+id/vt"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:textSize="18sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Rajpura ( Chandigarh )"
                android:textColor="@color/white"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:textSize="18sp"
                />
            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp"
                android:scaleX="0.5"
                android:scaleY="0.5"
                android:rating="4.0"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apply"
                android:layout_marginLeft="130dp"
                android:id="@+id/btn2"
                android:background="@drawable/bt_bg"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                />

            <ImageView
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:id="@+id/i"
                android:layout_below="@+id/c"
                android:layout_marginTop="70dp"
                android:src="@drawable/lpu">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lovely Professional University"
                android:textColor="@color/white"
                android:id="@+id/it"
                android:layout_toRightOf="@+id/i"
                android:layout_gravity="center"
                android:layout_below="@+id/ct"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:textSize="18sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Jalander ( Punjab )"
                android:textColor="@color/white"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:textSize="18sp"
                />

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp"
                android:scaleX="0.5"
                android:scaleY="0.5"
                android:rating="3.6"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apply"
                android:layout_marginLeft="130dp"
                android:id="@+id/btn3"
                android:background="@drawable/bt_bg"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                />


            <ImageView
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:id="@+id/b"
                android:layout_below="@+id/i"
                android:layout_marginTop="70dp"
                android:src="@drawable/cu2">
            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chandigarh University"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:id="@+id/bt"
                android:layout_toRightOf="@+id/i"
                android:layout_below="@+id/it"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:textSize="18sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Mohali ( Chandigarh )"
                android:textColor="@color/white"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:textSize="18sp"
                />
            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp"
                android:scaleX="0.5"
                android:scaleY="0.5"
                android:rating="4.3"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apply"
                android:layout_marginLeft="130dp"
                android:id="@+id/btn4"
                android:background="@drawable/bt_bg"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                />
        </LinearLayout>

    </ScrollView>

</RelativeLayout>
